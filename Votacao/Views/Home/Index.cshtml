@{
    ViewData["Title"] = "Login";
}

<form method="post" action="/login">
    <div class="login-form d-flex flex-column w-100 mt-5">
        <div class="d-flex mx-auto mb-5 text-center">
            <h1 class="w-100 text-center display-4" style="font-size: xx-large;">Sistema de Votação</h1>
        </div>
        <div class="form-group d-flex flex-column mx-auto mb-3">
            <label for="email">E-mail</label>
            <input id="email" name="email" class="form-control" type="email" />
        </div>
        <div class="form-group d-flex flex-column mx-auto">
            <label for="password">Senha</label>
            <input id="password" name="password" class="form-control" type="password" />
        </div>
        <div class="d-flex flex-row justify-content-end mx-auto mt-5">
            <button type="submit" class="btn btn-primary">
                Iniciar sessão
            </button>
        </div>
    </div>
</form>
